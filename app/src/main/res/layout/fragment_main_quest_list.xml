<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_quest_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="20"
        tools:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/main_quest_list_rv_item_not_completed"
        tools:spanCount="2">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/main_quest_list_empty_message"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="@dimen/circle_progress_bar_size"
        android:layout_height="@dimen/circle_progress_bar_size"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>